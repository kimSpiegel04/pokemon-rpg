<%- include partials/header -%>

    <div class='container'>
        <div class='row'>
            <div class='col-me-4'>
                <div class="card" style="width: 18rem; height: 30rem;">
                <img src="<%=user[0].animatedImage %>" class="card-img-top user-img" alt="pokemon">
                <div class="card-body">
                    <h5 class="card-title"><span class='user-name'><%= user[0].name %></h5>
                    <p class="card-text">HP: <span class='user-HP'><%=user[0].HP%></span><br>Attack: <span class='user-attack'><%=user[0].attack%></span> Defense: <span class='user-def'><%=user[0].defense%></span></p>
                    <a href="#" class="btn btn-danger">Fight!</a>
                </div>
                </div>
                <div class='row' id='pokeball-row'>
                    <% user.forEach(function(pokemon) { %>
                        <img src="<%= pokemon.pokeball %>" class="pokeball">        
                    <% }); %>
                </div>
            </div>

            <div class='col-md-1'></div>

            <div class='col-me-2'>
                <div class="card">
                    <div class="card-body">
                        This is some text within a card body.
                    </div>
                </div>
            </div>

            <div class='col-md-1'></div>

            <div class='col-me-4'>
                <div class="card" style="width: 18rem; height: 30rem;">
                <img src="<%=computer[0].animatedImage %>" class="card-img-top" alt="pokemon">
                <div class="card-body">
                    <h5 class="card-title"><%= computer[0].name %></h5>
                    <p class="card-text">HP: <%=computer[0].HP%><br>Attack: <%=computer[0].attack%> Defense: <%=computer[0].defense%></p>
                    
                </div>
                </div>
                <div class='row' id='pokeball-comp-row'>
                    <% computer.forEach(function(pokemon) { %>
                        <img src="<%= pokemon.pokeball %>" class="pokeball" data-name='<%= pokemon.name %>'>        
                    <% }); %>
                </div>
            </div>

        </div>
    </div>

<%- include partials/footer -%>